@model Warden.Models.ProductModel
@{
    ViewData["Title"] = "Confirmação de Exclusão";
}
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<div class="container py-5 text-center" data-aos="fade-up">
    <h3 class="text-danger mb-4">❗ Deseja realmente excluir o produto <strong>@Model.Name</strong>?</h3>

    <div class="d-flex justify-content-center gap-3">
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">🗑️ Confirmar Exclusão</button>
        </form>
        <a class="btn btn-secondary" asp-action="Index">↩️ Cancelar</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 600, once: true, easing: 'ease-in-out' });
</script>
