@model Warden.Models.ProductModel
@{
    ViewData["Title"] = "Excluir Produto";
}

<h2 class="mb-4 text-danger" data-aos="fade-down"><i class="lucide lucide-trash-2"></i> Confirmar Exclusão</h2>

<div class="card shadow p-4 rounded-4 border border-danger" data-aos="fade-up">
    <h4>Tem certeza que deseja excluir o produto <strong>"@Model.Name"</strong>?</h4>
    <form asp-action="Delete" method="post" class="mt-3 d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="lucide lucide-trash"></i> Excluir</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="lucide lucide-x"></i> Cancelar</a>
    </form>
</div>
