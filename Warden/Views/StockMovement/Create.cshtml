@model Warden.Models.StockMovementModel

@{
    ViewData["Title"] = "Nova Movimentação de Estoque";
}

<h1 class="mb-4">Nova Movimentação de Estoque</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Produto</label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<Warden.Enums.MovementTypeEnum>()"></select>
    </div>
    <div class="mb-3">
        <label class="form-label">Quantidade</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Motivo</label>
        <input asp-for="Reason" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Usuário</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
