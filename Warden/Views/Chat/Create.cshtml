@{
    ViewData["Title"] = "Criar Mensagem";
}

<h2 class="text-center mb-4" style="color: #ff4d4d; font-family: 'Arial', sans-serif;">Criar Mensagem</h2>

<div class="container">
    <form asp-action="Create" method="post" class="bg-white p-4 rounded shadow-lg">
        <div class="form-group mb-4">
            <label for="userName" style="color: #333;">Nome do Usuário:</label>
            <input type="text" class="form-control" id="userName" name="userName" required placeholder="Digite seu nome"
                   style="border-color: #ff4d4d; border-radius: 20px;" />
        </div>

        <div class="form-group mb-4">
            <label for="text" style="color: #333;">Mensagem:</label>
            <textarea class="form-control" id="text" name="text" required placeholder="Digite sua mensagem..."
                      style="border-color: #ff4d4d; border-radius: 20px;"></textarea>
        </div>

        <button type="submit" class="btn btn-danger btn-block" style="background-color: #ff4d4d; border-radius: 20px;">
            Enviar
        </button>
    </form>
</div>
