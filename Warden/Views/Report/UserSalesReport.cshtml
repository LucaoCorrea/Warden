@model Warden.Models.ViewModels.UserSalesReportViewModel

@{
    ViewData["Title"] = "Relatório de Vendas por Usuário";
}

<h2>👥 Relatório de Vendas por Usuário</h2>

<table class="table table-striped table-bordered mt-4">
    <thead>
        <tr>
            <th>Usuário</th>
            <th>Total em Vendas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userSale in Model.UserSales)
        {
            <tr>
                <td>@userSale.UserName</td>
                <td>R$ @userSale.TotalSalesAmount.ToString("F2")</td>
            </tr>
        }
        @if (!Model.UserSales.Any())
        {
            <tr>
                <td colspan="2" class="text-center">Nenhum resultado encontrado.</td>
            </tr>
        }
    </tbody>
</table>
