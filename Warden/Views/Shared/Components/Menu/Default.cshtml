@model UserModel

<nav>
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <a class="navbar-brand text-danger fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
            Olá, @Model.Name
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
            <ul class="navbar-nav me-3 gap-2">

                <li class="nav-item">
                    <a class="nav-link text-danger" asp-controller="Home" asp-action="Index">🏠 Página Inicial</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-primary" asp-controller="Dashboard" asp-action="Index">📈 Dashboard</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-success" href="#" id="vendasDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        🛒 Vendas
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="vendasDropdown">
                        <li><a class="dropdown-item" asp-controller="Sale" asp-action="Index">🛒 PDV</a></li>
                        <li><a class="dropdown-item" asp-controller="CashRegister" asp-action="Index">💰 Caixa</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-danger" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        🧾 Administração
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                        <li><a class="dropdown-item" asp-controller="Contact" asp-action="Index">📞 Fornecedores</a></li>
                        @if (Model.Profile == Warden.Enums.ProfileEnum.Admin)
                        {
                            <li><a class="dropdown-item" asp-controller="User" asp-action="Index">👤 Usuários</a></li>
                        }
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-dark" href="#" id="estoqueDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        📦 Estoque
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="estoqueDropdown">
                        <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">📦 Produtos</a></li>
                        <li><a class="dropdown-item" asp-controller="StockMovement" asp-action="Index">📊 Movimentações</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-dark" href="#" id="menuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        ⚙️ Menu
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="menuDropdown">
                        <li><a class="dropdown-item" asp-controller="EditPassword" asp-action="Index">🔑 Alterar Senha</a></li>
                        <li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">🚪 Sair</a></li>
                    </ul>
                </li>

            </ul>
        </div>
    </div>
</nav>
