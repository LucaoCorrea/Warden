<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Warden | Seu Controle de Contatos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Warden.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/dt/dt-2.3.2/datatables.min.css" rel="stylesheet" integrity="sha384-d76uxpdVr9QyCSR9vVSYdOAZeRzNUN8A4JVqUHBVXyGxZ+oOfrZVHC/1Y58mhyNg" crossorigin="anonymous">

    <style>
        body {
            background-color: #ffffff;
            color: #212529;
        }

        .navbar {
            background-color: #ffffff !important;
            border-bottom: 2px solid #dc3545;
            box-shadow: 0 1px 4px rgba(220, 53, 69, 0.1);
        }

            .navbar .nav-link,
            .navbar .navbar-brand {
                color: #dc3545 !important;
                font-weight: 500;
            }

                .navbar .nav-link:hover,
                .navbar .navbar-brand:hover {
                    color: #a71d2a !important;
                }

        .footer {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
            color: #dc3545;
            text-align: center;
            padding: 1rem 0;
            font-weight: 500;
        }

            .footer a {
                color: #dc3545;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                    color: #a71d2a;
                }

        main {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(220, 53, 69, 0.05);
            margin-top: 1.5rem;
        }


    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container">
                @await Component.InvokeAsync("Menu")
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5">
        <div class="container">
            &copy; 2025 - Warden | Seu Controle de Contatos
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.3.2/datatables.min.js" integrity="sha384-JRUjeYWWUGO171YFugrU0ksSC6CaWnl4XzwP6mNjnnDh4hfFGRyYbEXwryGwLsEp" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
