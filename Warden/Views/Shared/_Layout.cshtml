<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Warden | Seu Controle de Estoque</title>
    <link rel="icon" type="image/x-icon" href="~/img/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Warden.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/dt/dt-2.3.2/datatables.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #ffffff;
            color: #212529;
        }

        .navbar {
            background-color: #ffffff !important;
            border-bottom: 2px solid #dc3545;
            box-shadow: 0 1px 4px rgba(220, 53, 69, 0.1);
        }

            .navbar .nav-link,
            .navbar .navbar-brand {
                color: #dc3545 !important;
                font-weight: 500;
            }

                .navbar .nav-link:hover,
                .navbar .navbar-brand:hover {
                    color: #a71d2a !important;
                }

        .footer {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
            color: #dc3545;
            text-align: center;
            padding: 1rem 0;
            font-weight: 500;
        }

            .footer a {
                color: #dc3545;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                    color: #a71d2a;
                }

        main {
            background-color: #ffffff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(220, 53, 69, 0.05);
            margin-top: 1.5rem;
        }

        .notifications-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 9999;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .notification {
            background-color: #333;
            color: #fff;
            padding: 15px 20px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
            min-width: 280px;
            max-width: 400px;
            opacity: 1;
            transition: all 0.4s ease;
            display: flex;
            align-items: flex-start;
            gap: 10px;
            position: relative;
        }

            .notification:hover {
                background-color: #444;
            }

            .notification.read {
                opacity: 0.5;
            }

            .notification img {
                width: 64px;
                height: 64px;
                border-radius: 6px;
            }

        .notification-content {
            flex: 1;
        }

        .notification strong {
            font-size: 16px;
            display: block;
        }

        .notification p {
            margin: 5px 0 0 0;
            font-size: 14px;
        }

        .notification .close-btn {
            position: absolute;
            top: 8px;
            right: 10px;
            background: transparent;
            border: none;
            color: #fff;
            font-size: 16px;
            cursor: pointer;
        }

            .notification .close-btn:hover {
                color: #dc3545;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container">
                @await Component.InvokeAsync("Menu")
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-5">
        <div class="container">
            &copy; 2025 - Warden | Seu Controle de Estoque
        </div>
    </footer>

    <div class="notifications-container"></div>

    <script>
        const notificationSound = new Audio('/sounds/notify.mp3');
        notificationSound.volume = 0.05;

        async function fetchNotifications() {
            try {
                const response = await fetch('/api/notification');
                if (response.ok) {
                    const notifications = await response.json();
                    if (notifications.length > 0) {
                        displayNotifications(notifications);
                    }
                }
            } catch (error) {
                console.error('Erro ao buscar notificações:', error);
            }
        }

        function displayNotifications(notifications) {
            const container = document.querySelector('.notifications-container');
            if (!container) return;

            notifications.forEach(notification => {
                const div = document.createElement('div');
                div.className = 'notification';

                div.innerHTML = `
                    <img src="/img/logo.png" alt="Warden">
                    <div class="notification-content">
                        <strong>${notification.title}</strong>
                        <p>${notification.message}</p>
                    </div>
                    <button class="close-btn">&times;</button>
                `;

                div.querySelector('.close-btn').onclick = (e) => {
                    e.stopPropagation();
                    div.remove();
                };

                div.onclick = () => {
                    div.classList.add('read');
                    setTimeout(() => div.remove(), 500);
                };

                container.appendChild(div);
                notificationSound.play();

                fetch('/api/notification/' + notification.id, { method: 'PUT' });

                setTimeout(() => {
                    div.remove();
                }, 10000);
            });
        }

        setInterval(fetchNotifications, 5000);
        fetchNotifications();
    </script>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.3.2/datatables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
