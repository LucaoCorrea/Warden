@model ResetPasswordModel
@{
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = "Redefinir Senha";
}
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<div class="container py-5" data-aos="fade-up">
    <h2 class="mb-4 text-primary">🔑 Redefinir Senha</h2>

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" data-aos="fade-right">
            @TempData["MensagemErro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
        </div>
    }

    <form asp-controller="Login" asp-action="SendLinkResetPassword" method="post">
        <div class="mb-3">
            <label class="form-label">Login</label>
            <input type="text" asp-for="Login" class="form-control" id="login">
            @Html.ValidationMessageFor(x => x.Login, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" id="email">
            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">📩 Redefinir Senha</button>
            <a class="btn btn-secondary" asp-action="Index" asp-controller="Login">↩️ Voltar</a>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 600, once: true, easing: 'ease-in-out' });
</script>
