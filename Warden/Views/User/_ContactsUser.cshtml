@model List<ContactModel>

<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<div class="table-responsive" data-aos="fade-up">
    <table class="table table-striped table-hover align-middle text-center" id="table-contatos-usuario">
        <thead class="table-success">
            <tr>
                <th>#ID</th>
                <th>👤 Nome</th>
                <th>📧 Email</th>
                <th>📱 Celular</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var contato in Model)
                {
                    <tr data-aos="fade-up" data-aos-delay="100">
                        <td>@contato.Id</td>
                        <td>@contato.Name</td>
                        <td>@contato.Email</td>
                        <td>@contato.Phone</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-muted">Nenhum contato encontrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 600, once: true, easing: 'ease-in-out' });
</script>
