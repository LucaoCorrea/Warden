@model Warden.Models.SaleModel

<h2>Detalhes da Venda #@Model.Id</h2>
<p>Vendedor: @Model.UserName</p>
<p>Forma de Pagamento: @Model.PaymentMethod</p>

<h3>Itens</h3>
<table class="table">
    <thead>
        <tr>
            <th>Produto ID</th>
            <th>Quantidade</th>
            <th>Preço Unitário</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Quantity</td>
                <td>R$ @item.UnitPrice</td>
                <td>R$ @(item.Quantity* item.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total da Venda: R$ @Model.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("F2")</strong></p>

<a asp-action="DownloadReceipt" asp-route-id="@Model.Id" class="btn btn-primary">
    📄 Baixar Nota Fiscal
</a>
