@model ContactModel
@{
    ViewData["Title"] = "Excluir Contato";
}
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<div class="container py-5 text-center" data-aos="zoom-in">
    <h3 class="text-danger mb-4">🗑️ Deseja realmente excluir o contato: <strong>@Model.Name</strong>?</h3>

    <form asp-action="DeleteConfirmed" method="post" class="d-inline-block">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">✅ Confirmar Exclusão</button>
    </form>
    <a class="btn btn-outline-secondary ms-2" asp-action="Index">❌ Cancelar</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({ duration: 600, once: true, easing: 'ease-in-out' });
</script>
