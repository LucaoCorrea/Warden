@{
    ViewData["Title"] = "Criar Contatos";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>
</div>

<form>
    <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" class="form-control"  placeholder="Digite seu Contato">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" placeholder="Digite o E-mail">
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Telefone</label>
        <input type="text" class="form-control" placeholder="Digite o Telefone">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
</form>