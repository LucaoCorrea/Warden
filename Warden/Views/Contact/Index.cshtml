@model List<ContactModel>
@{
    ViewData["Title"] = "Contatos";
}



<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a asp-controller="Contact" asp-action="Create" class="btn btn-primary" role="button">Adicionar Novo Contato</a>
    </div>

    <br/>

   <h1 class="display-4">Contatos</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">E-mail</th>
            <th scope="col">Phone</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
            @if(Model != null && Model.Any()){
            {
                    foreach (ContactModel contact in Model)
                {
                    <tr>
                            <th scope="row">@contact.Id</th>
                            <td>@contact.Name</td>
                            <td>@contact.Email</td>
                            <td>@contact.Phone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contact.Id" asp-controller="Contact" asp-action="Delete">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
          }
    </tbody>
</table>
</div>